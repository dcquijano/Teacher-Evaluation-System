@model IEnumerable<Teacher_Evaluation_System__Golden_Success_College_.Models.Enrollment>
@{
    ViewData["Title"] = "Enrollments";
    Layout = "_Layoutadmin";
}

<h2>Enrollments</h2>

<a asp-action="Create" class="btn btn-primary mb-2">Add Enrollment</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student</th>
            <th>Subject</th>
            <th>Teacher</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Student.FullName</td>
                <td>@e.Subject.SubjectName</td>
                <td>@e.Subject.Teacher.FullName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@e.EnrollmentId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@e.EnrollmentId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
